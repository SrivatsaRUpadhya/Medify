//form to accept medications in pug
form(hx-post="/api/action/addMedication" hx-target="this" onSubmit=(e)=>e.preventDefault() hx-trigger="submit" class="max-h-screen overflow-scroll")
	select(name="condition_id" class="border-2 border-gray-300 rounded-md p-2 m-2")
		each condition in conditions
			option(value=condition.id)= condition.condition_name
	select(name="medicine_id" class="border-2 border-gray-300 rounded-md p-2 m-2")
		each medicine in medicines
			option(value=medicine.id)= medicine.medicine_name
	input(type="text" name="patient_id" placeholder="Id" value=patient_id class="border-2 hidden border-gray-300 rounded-md p-2 m-2")
	input(type="text" name="dosage" placeholder="Dosage" class="border-2 border-gray-300 rounded-md p-2 m-2")
	input(type="text" name="schedule" placeholder="Schedule" class="border-2 border-gray-300 rounded-md p-2 m-2")
	button( type="submit" class="text-center bg-black hover:bg-gray-700 text-white font-bold py-2 px-4 rounded m-2") Add Medication

script( src="https://unpkg.com/htmx.org/dist/ext/response-targets.js")

