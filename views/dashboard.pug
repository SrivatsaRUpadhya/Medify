doctype html
html(lang="en")
	head
		title= title
		script(src="https://unpkg.com/htmx.org@1.9.9" integrity="sha384-QFjmbokDn2DjBjq+fM+8LUIVrAgqcNW2s0PjAxHETgRn9l4fvX31ZxDxvwQnyMOX" crossorigin="anonymous" defer)
		script(src="https://cdn.tailwindcss.com")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="htmx-config" content='{withCredentials: true}')
		script(src="/js/main.js" defer)
		link(href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet")
	body(class="bg-[#cbdeb1]")
		include ./includes/navbar
		+navbar(user)
		h1(class="text-3xl font-bold") Your Family
		div(class="sm:container sm:flex w-52 m-auto p-20 shadow-lg rounded-lg")
			div(class="sm:flex" id="accordion-collapse" data-accordion="collapse")
				each userOfList,index in usersList 
					include ./includes/patientCard.pug
					h2(id=`accordion-collapse-heading-${index}`)
						button(type="button" class="flex text-center items-center w-54 my-2 justify-between w-full p-5 font-medium rtl:text-right text-white border border-b-0 border-gray-200 rounded-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-white hover:bg-[#586645] dark:hover:bg-[#586645] gap-3" data-accordion-target=`#accordion-collapse-body-${index}` aria-expanded="true" aria-controls=`accordion-collapse-body-${index}`) #{userOfList.info.patient_name}   #{userOfList.info.age}   #{userOfList.info.gender}
						a(class="float-right bg-green-700 hover:bg-green-500 text-white font-bold py-2 px-4 rounded-full" href="/profile?patient_id=" + userOfList.info.patient_id) User Profile
							svg(data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6")
							path(stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5")
						+patientCard(userOfList,index)
	script(src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js")
			
	
